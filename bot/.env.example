# Server Configuration
PORT=3000
NODE_ENV=development
API_KEY=your_api_key_for_github_actions
JWT_SECRET=your_jwt_secret_here

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/bounty_hunter_bot

# Authentication
GITHUB_TOKEN=your_github_token
GITHUB_WEBHOOK_SECRET=your_webhook_secret

# Blockchain (Sepolia)
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your-api-key
PRIVATE_KEY=your_wallet_private_key
BOUNTY_ESCROW_ADDRESS=0x...
MAX_GAS_PRICE_GWEI=50

# MNEE Payment Service
MNEE_ENVIRONMENT=sandbox
MNEE_API_KEY=your_mnee_api_key
MNEE_BOT_WIF=your_bot_wif_private_key
MNEE_BOT_ADDRESS=your_bot_mnee_address

# GitHub App Configuration
GITHUB_APP_ID=your_github_app_id
GITHUB_APP_PRIVATE_KEY_PATH=./github-app-private-key.pem

# Logging
LOG_LEVEL=info

# Escalation Configuration
ESCALATION_CHECK_INTERVAL=3600000  # 1 hour in milliseconds

# Bot Wallet Configuration
MAX_GAS_PRICE_GWEI=50
GAS_LIMIT_MULTIPLIER=1.2